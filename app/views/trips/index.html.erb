<% if current_user && current_user.trips[0] == nil %>

<div class="section">
  <h2 class="light center-align">Shoot! You don't have any trips yet. Let's change that:</h2>
      
      <br>
      <br>

      <div class="container">
        <div class="row center align">
            <div class="col s4">
              <a class="btn-floating btn-large waves-effect teal accent-3" href="/groups/new"><i class="large material-icons">supervisor_account</i></a>
              <h4 class="light center-align">Add onto an Existing Trip</h4>
            </div>

          <div class="col s4">
            <h1 class="light center-align">or</h1>
          </div>
          <div class="col s4">
            <a class="btn-floating btn-large waves-effect teal accent-3" href="/trips/new"><i class="large material-icons">add</i></a>
            <h4 class="light center-align">Create a <br>New Trip</h4>
          </div>
        </div>
      </div>
</div>

<% end %>

<% if current_user && current_user.trips[0] != nil %>

<div ng-app="app">
  <div ng-controller="tripsCtrl">
    
    <div class="row ">
      <div class="col s12 ">

        <div style="position: relative; height: 80px">
          <h2 class="light center-align">My Trips</h2>
          <div class="fixed-action-btn horizontal click-to-toggle" style="position: absolute; right: 24px;">
            <a class="btn-floating btn-large waves-effect teal accent-3" href="/trips/new">
              <i class="material-icons center-align">add</i>
           </a>
          </div>
        </div>

        <ul class="collapsible" data-collapsible="accordion">
          <% @trips.each do |trip| %>
            <li>
                <div class="collapsible-header">
                      <h4 class="card-title text-darken-2"><%= trip.title %></h4>
                </div>
                <div class="collapsible-body">
                  <div class="row">
                    <div class="col s3 center-align">
                      <p><%= trip.start_date.strftime("%b %d, %Y") %> - <%= trip.end_date.strftime("%b %d, %Y")  %></p>
                    </div>
                    <div class="col s3 center-align">
                      <p><%= trip.city %></p>
                    </div>
                    <div class="col s3 center-align">
                      <p><%= trip.country %></p>
                    </div>
                    <div class="col s3 center-align">
                      <p><a href='trips/<%= trip.id%>'><i class="material-icons center-align">launch</i></a></p>
                    </div>
                  </div>
                </div>
            </li>
          <% end %>
        </ul>

      </div>
    </div>

  </div>
</div>

<% end %>

