<div ng-app="app">
  <div ng-controller="commentsCtrl" ng-init="setup()">
  <div class="container">
    <h1 class="center-align">Group Chat</h1> 
    
      <div class="section">
      <div class="divider"></div>
      <br>
        <div class = "row" ng-repeat="comment in comments">
          <div class=" col s5 valign-wrapper">
            <div class=" valign"><h5>{{ comment.email }} said:</h5></div>
          </div>
          <div class="col s7 card-panel teal lighten-4"><p>{{ comment.text }}</p></div>
        </div>
      </div>

      <div class="divider"></div>

      <div class="row">
        <form class="col s12">
          <div class="row">
            <div class="input-field col s12">
             <i class="material-icons prefix">add</i>
              <input ng-model="newText" id="icon_prefix" type="text" class="btn-primary">
              <label for="icon_prefix">Add Comment</label>
              <a ng-mouseenter="addComment(newText)" class="waves-effect waves-light btn">add</a>
            </div>
          </div>
        </form>
      </div>


    </div>
  </div>
</div>

<script type="text/javascript">var tripId = <%= @trip.id %>;</script>
<script type="text/javascript">var userId = <%= current_user.id %>;</script>